/*Escreva uma função que receba dois números inteiros e retorne a soma dos números existentes entre eles.*/
#include <stdio.h>
#include <locale.h>


int diferenca(){
    
    int num1, num2, soma = 0, i, resto;
    
    printf("Digite o primeiro número: ");
    scanf("%d", &num1);
    
    printf("Digite o segundo número: ");
    scanf("%d", &num2);
    
    

       if(num1 > num2){
           for(i = num2; i <= num1; i++){
               soma = soma + i;
               
              
           }
           printf("A soma da diferença entre os números é: %d", soma);
       }
       else if(num2 > num1){
           for(i = num1; i <= num2; i++){
               soma = soma + i;
               
              
           }
           printf("A soma da diferença entre os números é: %d", soma);
       }
  
}

int main(){
	
	setlocale(LC_ALL, "Portuguese");
		
	    diferenca();
		
	return 0;
}
