//Escreva um programa que alimente um vetor A com 5 números inteiros. Em um vetor B, armazene odobro de cada um dos números vetor A e apresente o vetor B na tela.
#include <stdio.h>

int main() {
    
    int contador, vetorA[5], vetorB[5];
    
    /*Alimenta o vetor*/
    for(contador = 0; contador < 5; contador = contador + 1){
        printf("Escreva número: ");
        scanf("%d", &vetorA[contador]);
    }
    
    /*Alimenta o vetor B*/
    for(contador = 0; contador < 5; contador = contador + 1){
       vetorB[contador] = vetorA[contador]  * 2; 
}

    /*Apresenta o vetor B*/
    for(contador = 0; contador < 5; contador = contador + 1){
        printf("\nO elemento é: %d", vetorB[contador]);
    }



printf("\n\n\n\nDeu certo!!!");
    return 0;
}
