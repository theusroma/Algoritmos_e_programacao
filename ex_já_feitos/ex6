#include <stdio.h>
#include <locale.h>

//void para função sem retorno e para funções que necessitam de retorno, precisa declarar
//que tipo de retorno é (int, float, char...)!

void linha(int quant){
	
	for(int i = 0; i < quant; i++){
		
		printf("*");
		
	}
}

int main(){
	
	setlocale(LC_ALL, "Portuguese");
	
	linha(20);
	
	printf("\n");
	
	printf("Número entre 1 e 5:");
	
	printf("\n");
	
	linha(20);
	
	printf("\n");
	
	for(int i = 1; i <= 5; i++){
		
		printf("%d\n", i);
		
	}
	
	printf("\n");
	
	linha(20);	
		
	return 0;
}
