#include <stdio.h>
#include <locale.h>

float soma(float n1, float n2){
	
	float resultado;
	
	resultado = n1 + n2;
	
	return resultado;
}

int main (){
	
	setlocale(LC_ALL, "Portuguese");
	
	float num1, num2;
	
	printf("Informe o número 1: ");
	scanf("%f", &num1);
	
	printf("Informe o número 2: ");
	scanf("%f", &num2);
	
	printf("Soma: %.1f", soma(num1, num2));
	
	return 0;
}
